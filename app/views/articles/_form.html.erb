<%= form_with model: obj do |form| %>
  <% obj.errors.full_messages.each do |msg| %>
    <ul>
      <li><%= msg %></li>
    </ul>
  <% end %>
  <p><%= form.label :title, 'Title:' %></p>
  <p><%= form.text_field :title %></p>
  <p><%= form.label :description, 'Description:' %></p>
  <p><%= form.text_area :description %></p>
  <%= form.submit %>
<% end %>
